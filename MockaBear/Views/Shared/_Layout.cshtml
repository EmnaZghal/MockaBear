<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MockaBear</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MockaBear.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Client/login.css"/>

    <!-- Font Awesome 6.5.0 Free – CSS uniquement -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          referrerpolicy="no-referrer" />

    @RenderSection("Styles", required: false)
    <!-- jQuery (à placer AVANT chosen) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Chosen CSS et JS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/Client/login.css" />
    <link rel="stylesheet" href="~/css/Client/signUpModal.css" />

</head>
<body>

    @await Html.PartialAsync("~/Views/Home/_MainNavbar.cshtml")
    @await Html.PartialAsync("~/Views/Home/_LoginModal.cshtml")
    @await Html.PartialAsync("~/Views/Home/_SignUpModal.cshtml")

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/574c761be7.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="https://kit.fontawesome.com/574c761be7.js" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)


    <script>

        var openLogin = '@(ViewBag.OpenLoginModal ?? false)';
        if (openLogin === 'True') { openLoginModal(); }


        function openLoginModal() {
            document.getElementById("loginModal").style.display = "flex";
            document.getElementById("signUpModal").style.display = "none";
        }

        function closeLoginModal() {
            document.getElementById("loginModal").style.display = "none";
        }

        function openSignUpModal() {
            document.getElementById("loginModal").style.display = "none";
            document.getElementById("signUpModal").style.display = "flex";
        }

        function closeSignUpModal() {
            document.getElementById("signUpModal").style.display = "none";
        }



        window.onclick = function(event) {
            const loginModal = document.getElementById("loginModal");
            const signUpModal = document.getElementById("signUpModal");
            if (event.target === loginModal) {
                closeLoginModal();
            }
            if (event.target === signUpModal) {
                closeSignUpModal();
            }
        }
           
        document.addEventListener("DOMContentLoaded", function () {
            var openSignUp = '@(ViewBag.OpenSignUpModal ?? false)';

            if (openSignUp === 'True') {
                openSignUpModal();
            }
        });
    
    </script>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
