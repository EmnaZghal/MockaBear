<!-- _ProductDetailModal.cshtml -->
<div id="productDetailModal" class="modal-overlay" style="display: none;">
    <div class="modal-content product-detail-modal">
        <span class="close-btn" onclick="closeProductDetailModal()">&times;</span>
        <div class="modal-body">
            <div class="product-image-container">
                <img id="productDetailImage" src="" alt="Product Image">
            </div>
            <div class="product-info-container">
                <h2 id="productDetailName"></h2>
                <p><strong>Description:</strong></p>
                <p id="productDetailDescription"></p>
                <p><strong>Price:</strong> <span id="productDetailPrice"></span> €</p>
                <p><strong>Stock:</strong> <span id="productDetailStock"></span></p>
                <p><strong>Available:</strong> <span id="productDetailAvailable"></span></p>
                <p><strong>Category:</strong> <span id="productDetailCategory"></span></p>
            </div>
        </div>
    </div>
</div>
