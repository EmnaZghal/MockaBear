<div id="ingredientModal" class="modal-overlay" style="display:none;">
    <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <div class="container">
            <div class="title">New Ingredient</div>

            <form method="post" asp-controller="Ingredient" asp-action="Add" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="input-box">
                    <span class="details">Ingredient Name</span>
                    <input type="text" name="Name" required />
                </div>

                <div class="input-box">
                    <span class="details">Price (€)</span>
                    <input type="number" name="Price" step="0.01" required />
                </div>

                <div class="input-box">
                    <span class="details">Number</span>
                    <input type="number" name="Number" required />
                </div>

                <div class="input-box">
                    <span class="details">Task</span>
                    <input type="text" name="Task" required />
                </div>

                <div class="input-box">
                    <span class="details">Task Number</span>
                    <input type="number" name="TaskNumber" required />
                </div>

                <div class="input-box">
                    <span class="details">Upload Image</span>
                    <input type="file" name="ImageFile" accept="image/*" required />
                </div>

                <div class="button">
                    <input type="submit" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>