<div id="editIngredientModal" class="modal-overlay" style="display:none;">
    <div class="modal-content">
        <span class="close-btn" onclick="closeEditIngredientModal()">&times;</span>
        <div class="container">
            <div class="title">Edit Ingredient</div>

            <form method="post" asp-controller="Ingredient" asp-action="Update" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" id="editIngredientId" />
                <input type="hidden" name="OldImageUrl" id="editIngredientOldImage" />

                <div class="input-box">
                    <span class="details">Ingredient Name</span>
                    <input type="text" id="editIngredientName" name="Name" required />
                </div>

                <div class="input-box">
                    <span class="details">Price (€)</span>
                    <input type="number" id="editIngredientPrice" name="Price" step="0.01" required />
                </div>

                <div class="input-box">
                    <span class="details">Number</span>
                    <input type="number" id="editIngredientNumber" name="Number" required />
                </div>

                <div class="input-box">
                    <span class="details">Task</span>
                    <input type="text" id="editIngredientTask" name="Task" required />
                </div>

                <div class="input-box">
                    <span class="details">Task Number</span>
                    <input type="number" id="editIngredientTaskNumber" name="TaskNumber" required />
                </div>

                <div class="input-box">
                    <span class="details">Upload Image</span>
                    <input type="file" name="ImageFile" accept="image/*" />
                </div>

                <div class="button">
                    <input type="submit" value="Update" />
                </div>
            </form>
        </div>
    </div>
</div>
