<!-- _ClientDetailModal.cshtml -->
<div id="clientDetailModal" class="modal-overlay" style="display: none;">
    <div class="modal-content client-detail-modal">
        <span class="close-btn" onclick="closeClientDetailModal()">&times;</span>
        <div class="modal-body">
            <div class="client-image-container">
                <img id="clientDetailImage" src="" alt="Client Image">
            </div>
            <div class="client-info-container">
                <h2>Client Information</h2>
                <p><strong>Name:</strong> <span id="clientDetailName"></span></p>
                <p><strong>Email:</strong> <span id="clientDetailEmail"></span></p>
                <p><strong>Phone:</strong> <span id="clientDetailPhone"></span></p>
                <p><strong>Address:</strong> <span id="clientDetailAddress"></span></p>
            </div>
        </div>
    </div>
</div>