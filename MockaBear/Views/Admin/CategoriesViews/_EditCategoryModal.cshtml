@* /Views/Admin/OrderViews/_EditOrderModal.cshtml *@

<!-- ► MODAL : MISE À JOUR DU STATUT ◄ -->
<div id="editOrderModal" class="modal-overlay" style="display:none;">
    <div class="modal-content">
        <span class="close-btn" onclick="closeEditOrderModal()">&times;</span>
        <h4>Edit Order Status</h4>
        <form asp-controller="Orders" asp-action="UpdateStatus" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" id="editOrderId" name="id" />

            <div class="input-box">
                <span class="details">Status</span>
                <select id="editOrderStatus" name="status" required>
                    <option value="Pending">Pending</option>
                    <option value="Processing">Processing</option>
                    <option value="Shipped">Shipped</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>

            <div class="button">
                <input type="submit" value="Save" class="btn-primary" />
            </div>
        </form>
    </div>
</div>
