<!-- _IngredientDetailModal.cshtml -->
<div id="ingredientDetailModal" class="modal-overlay" style="display: none;">
    <div class="modal-content product-detail-modal">
        <span class="close-btn" onclick="closeIngredientDetailModal()">&times;</span>
        <div class="modal-body">
            <div class="product-image-container">
                <img id="ingredientDetailImage" src="" alt="Ingredient Image">
            </div>
            <div class="product-info-container">
                <h2 id="ingredientDetailName"></h2>
                <p><strong>Price:</strong> <span id="ingredientDetailPrice"></span> €</p>
                <p><strong>Number:</strong> <span id="ingredientDetailNumber"></span></p>
                <p><strong>Task:</strong> <span id="ingredientDetailTask"></span></p>
                <p><strong>Task Number:</strong> <span id="ingredientDetailTaskNumber"></span></p>
            </div>
        </div>
    </div>
</div>